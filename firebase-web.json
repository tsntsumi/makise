{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "source": "sites/website",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    }
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "firestore": {
      "host": "192.168.0.10",
      "port": 8082
    },
    "hosting": {
      "host": "192.168.0.10",
      "port": 5502
    },
    "storage": {
      "host": "192.168.0.10",
      "port": 9192
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "functions": {
      "port": 5002
    },
    "auth": {
      "port": 9099
    }
  }
}
